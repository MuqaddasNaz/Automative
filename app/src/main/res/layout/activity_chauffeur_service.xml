                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/SUV_Sports_Utility_Vehicle"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/Audi_Q7_or_similar"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_groups"
                            android:text="@string/Passengers"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_bag"
                            android:text="@string/Suitcases"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/Smooth_luxurious_rides_to_wherever_you_wish_your_chauffeur_to_take_you"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            tools:ignore="DuplicateIds" />


                        <ImageView
                            android:id="@+id/btn_wattsup3"
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="16dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/img_19"
                            tools:ignore="DuplicateIds" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_2"
                        tools:ignore="DuplicateIds" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/People_Mover"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/Mercedes_V_Class_or_similar"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_groups"
                            android:text="@string/urdu_Passengers"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_bag"
                            android:text="@string/urdu_Suitcases"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
