<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <stroke
                android:width="4dp"
                android:color="#000000" />
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="400dp" />
        </shape>
    </item>
    <!-- Gradient overlay -->
    <item android:top="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#000000"
                android:centerColor="#FA2B2B"
                android:endColor="#FFFFFF"
                android:type="linear" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="550dp" />
        </shape>
    </item>
    <!-- Additional overlay for depth effect -->
    <item android:top="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#99000000" />
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="400dp" />
        </shape>
    </item>

</layer-list>
